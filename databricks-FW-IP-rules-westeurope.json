                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "prod-westeurope-observabilityeventhubs.servicebus.windows.net"
                                    ],
                                    "sourceAddresses": [
                                        "10.179.0.0/17"
                                    ],
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "dbfs",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "xxx.blob.core.windows.net"
                                    ],
                                    "sourceAddresses": [
                                        "10.179.0.0/17"
                                    ],
                                    "sourceIpGroups": []
                                }
                            ]
                        }
                    }
                ],
                "natRuleCollections": []
            }
        }
    ]
}